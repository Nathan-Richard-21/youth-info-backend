# Server Configuration
PORT=5000

# MongoDB Connection - Get from MongoDB Atlas
MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/myyouthinfo

# JWT Secret - Generate a strong random string (use: openssl rand -base64 32)
JWT_SECRET=your-super-secret-jwt-key-change-this-to-something-random

# OpenAI API Key (for AI career assistant)
OPENAI_API_KEY=sk-your-openai-api-key

# Google OAuth (optional - for Google Sign-In)
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com

# Email Configuration (Gmail with App Password)
# Create App Password: Google Account > Security > 2FA > App Passwords
EMAIL_USER=your-email@gmail.com
EMAIL_APP_PASSWORD=your-16-character-app-password

# EmailJS Configuration (alternative email service)
EMAILJS_SERVICE_ID=your-service-id
EMAILJS_TEMPLATE_ID=your-template-id
EMAILJS_PUBLIC_KEY=your-public-key
EMAILJS_PRIVATE_KEY=your-private-key

# Frontend URL (for CORS and password reset links)
FRONTEND_URL=https://myyouthinfo.vercel.app
